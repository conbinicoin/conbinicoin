[Unit]
Description=Bitcoin's distributed currency daemon
After=network.target

[Service]
User=bitcoin
Group=bitcoin

Type=forking
PIDFile=/var/lib/conbinicoind/conbinicoind.pid
ExecStart=/usr/bin/conbinicoind -daemon -pid=/var/lib/conbinicoind/conbinicoind.pid \
-conf=/etc/bitcoin/bitcoin.conf -datadir=/var/lib/conbinicoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
